{
	"compilerOptions": {
		"target": "es2024",
		"module": "preserve",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["ESNext"],
		"experimentalDecorators": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	}
}
